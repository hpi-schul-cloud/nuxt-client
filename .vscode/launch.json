{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Generate client via NPM",
			"runtimeExecutable": "npm",
			"runtimeArgs": ["run-script", "generate-client:server"],
			"port": 9229,
			"skipFiles": ["<node_internals>/**"]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Test (unit) All",
			"program": "${workspaceFolder}/node_modules/.bin/jest",
			"args": ["--runInBand"],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"disableOptimisticBPs": true,
			"windows": {
				"program": "${workspaceFolder}/node_modules/jest/bin/jest"
			}
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Test (unit) Current File",
			"program": "${workspaceFolder}/node_modules/.bin/jest",
			"args": ["-i", "--", "${fileBasename}", "--config", "jest.config.js"],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"disableOptimisticBPs": true,
			"windows": {
				"program": "${workspaceFolder}/node_modules/jest/bin/jest"
			}
		},
		{
			"name": "Debug Jest Tests",
			"type": "node",
			"request": "launch",
			"runtimeArgs": [
				"--inspect-brk",
				"${workspaceRoot}/node_modules/jest/bin/jest.js",
				"--runInBand"
			],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"port": 9229
		},
		{
			"type": "chrome",
			"request": "launch",
			"name": "Debug: Browser (Nuxt, Chrome)",
			"url": "http://localhost:4000",
			"webRoot": "${workspaceFolder}"
		},
		{
			"type": "chrome",
			"request": "attach",
			"name": "Debug: Attach Browser (Nuxt, Chrome)",
			"port": 9222,
			"webRoot": "${workspaceFolder}"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Debug: Server (Nuxt)",
			"args": ["dev"],
			"osx": {
				"program": "${workspaceFolder}/node_modules/.bin/nuxt"
			},
			"linux": {
				"program": "${workspaceFolder}/node_modules/.bin/nuxt"
			},
			"windows": {
				"program": "${workspaceFolder}/node_modules/nuxt/bin/nuxt.js"
			}
		}
	],
	"compounds": [
		{
			"name": "fullstack: nuxt",
			"configurations": [
				"Debug: Server (Nuxt)",
				"Debug: Browser (Nuxt, Chrome)"
			]
		}
	]
}
