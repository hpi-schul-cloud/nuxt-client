{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"strict": true,
		"jsx": "preserve",
		"importHelpers": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"forceConsistentCasingInFileNames": true,
		"useDefineForClassFields": true,
		"sourceMap": true,
		"experimentalDecorators": true,
		"baseUrl": ".",
		"types": ["webpack-env", "jest"],
		"paths": {
			"@feature-common-editor": ["src/components/feature-common-editor"],
			"@feature-common-render-html": [
				"src/components/feature-common-render-html"
			],
			"@boardShared/*": ["src/components/feature-board/shared/*"],
			"@boardState/*": ["src/components/feature-board/state/*"],
			"@boardTypes/*": ["src/components/feature-board/types/*"],
			"@/*": ["src/*"],
			"@@/*": ["*"]
		},
		"lib": ["esnext", "dom", "dom.iterable", "scripthost"]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"tests/**/*.ts",
		"tests/**/*.tsx"
	],
	"exclude": ["node_modules", "./src/components/base/_globals.js"],
	"vueCompilerOptions": {
		"target": 2.7
	}
}
