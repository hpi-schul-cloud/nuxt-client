{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"strict": true,
		"jsx": "preserve",
		"importHelpers": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"forceConsistentCasingInFileNames": true,
		"useDefineForClassFields": true,
		"sourceMap": true,
		"experimentalDecorators": true,
		"baseUrl": ".",
		"types": ["webpack-env", "jest"],
		"paths": {
			"@data-board": ["src/components/data-board"],
			"@data-external-tool": ["src/components/data-external-tool"],
			"@data-group": ["src/components/data-group"],
			"@data-system": ["src/components/data-system"],
			"@data-provisioning-options": [
				"src/components/data-provisioning-options"
			],
			"@data-room": [
				"src/components/data-room"
			],
			"@feature-board-file-element": [
				"src/components/feature-board-file-element"
			],
			"@feature-board-submission-element": [
				"src/components/feature-board-submission-element"
			],
			"@feature-board-text-element": [
				"src/components/feature-board-text-element"
			],
			"@feature-board-link-element": [
				"src/components/feature-board-link-element"
			],
			"@feature-board-external-tool-element": [
				"src/components/feature-board-external-tool-element"
			],
			"@feature-board-drawing-element": [
				"src/components/feature-board-drawing-element"
			],
			"@feature-board": ["src/components/feature-board"],
			"@feature-course-sync": ["src/components/feature-course-sync"],
			"@feature-editor": ["src/components/feature-editor"],
			"@feature-render-html": ["src/components/feature-render-html"],
			"@feature-news-form": ["src/components/feature-news-form"],
			"@ui-alert": ["src/components/ui-alert"],
			"@ui-board": ["src/components/ui-board"],
			"@ui-preview-image": ["src/components/ui-preview-image"],
			"@ui-confirmation-dialog": ["src/components/ui-confirmation-dialog"],
			"@ui-date-time-picker": ["src/components/ui-date-time-picker"],
			"@ui-light-box": ["src/components/ui-light-box"],
			"@ui-speed-dial-menu": ["src/components/ui-speed-dial-menu"],
			"@ui-room-details": ["src/components/ui-room-details"],
			"@util-board": ["src/components/util-board"],
			"@util-validators": ["src/components/util-validators"],
			"@util-vue": ["src/components/util-vue"],
			"@util-input-masks": ["src/components/util-input-masks"],
			"@util-device-detection": ["src/components/util-device-detection"],
			"@page-board": ["src/components/page-board"],
			"@page-class-members": ["src/components/page-class-members"],
			"@/*": ["src/*"],
			"@@/*": ["*"]
		},
		"lib": ["esnext", "dom", "dom.iterable", "scripthost"]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"tests/**/*.ts",
		"tests/**/*.tsx"
	],
	"exclude": [
		"node_modules",
		"./src/components/base/components.js",
		"vendor",
		"public/vendor"
	]
}
